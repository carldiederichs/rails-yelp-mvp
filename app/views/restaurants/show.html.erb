<h1><%= @restaurant.name %> <small>(<%= @restaurant.category %>)</small></h1>

<ul>
  <li>Adress: <%= @restaurant.address %></li>
  <li>Phone number: <%= @restaurant.phone_number %></li>
</ul>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= link_to "Delete #{@restaurant.name}", restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?"} %>
<br>
<%= link_to "Back to all restaurants", restaurants_path %>
<br>
<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
